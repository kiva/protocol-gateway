{
  "name": "gateway",
  "version": "1.0.0",
  "private": false,
  "description": "Gateway for Kiva Protocol",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "rimraf dist && tsc && node -r dotenv/config dist/main.js",
    "start:debug": "nodemon --legacy-watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:local": "node -r dotenv/config node_modules/.bin/jest -- local",
    "test:prod": "node -r dotenv/config node_modules/.bin/jest --runInBand --bail -- prod"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.14",
    "@nestjs/core": "^7.6.14",
    "@nestjs/platform-express": "^7.6.14",
    "class-validator": "^0.13.1",
    "crypto-js": "^4.0.0",
    "express-jwt": "^6.0.0",
    "express-rate-limit": "^5.2.6",
    "express-request-id": "^1.4.1",
    "helmet": "^4.4.1",
    "http-proxy-middleware": "^1.0.6",
    "jwks-rsa": "^2.0.0",
    "opentracing": "^0.14.5",
    "protocol-common": "^0.1.31",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.14",
    "@types/jest": "^26.0.20",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "dotenv": "^8.2.0",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^38.1.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "tsc && node -r dotenv/config dist/main.js"
  }
}
