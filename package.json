{
  "name": "gateway",
  "version": "1.0.0",
  "private": false,
  "description": "Gateway for Kiva Protocol",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:debug": "nodemon --legacy-watch",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test:local": "node -r dotenv/config node_modules/.bin/jest -- local",
    "test:prod": "node -r dotenv/config node_modules/.bin/jest --runInBand --bail -- prod"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/core": "^7.5.5",
    "@nestjs/platform-express": "^7.5.5",
    "class-validator": "^0.12.2",
    "crypto-js": "^4.0.0",
    "express-jwt": "^6.0.0",
    "express-rate-limit": "^5.2.3",
    "express-request-id": "^1.4.1",
    "helmet": "^4.2.0",
    "http-proxy-middleware": "^1.0.6",
    "jwks-rsa": "^1.12.3",
    "opentracing": "^0.14.5",
    "protocol-common": "^0.1.30",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.5",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.5.5",
    "@types/jest": "^26.0.18",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts"
  }
}
